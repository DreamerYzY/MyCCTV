<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.yangzhiyan.mycctv.fragment.NewsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/news_pic"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@android:color/white"
        android:src="@mipmap/icon_news_logo"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_below="@id/news_pic"
        android:layout_height="0.5dp"
        android:background="@color/unselctedtext"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/news_tab"
        android:layout_below="@id/line"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/selectedtext"
        app:tabTextColor="@android:color/black"
        app:tabSelectedTextColor="@color/selectedtext"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/news_viewpager"
        android:layout_below="@id/news_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
